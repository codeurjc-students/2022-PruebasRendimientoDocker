{
    "version": "3.0",
    "services": {
        "prometheus": {
            "image": "prom/prometheus:v2.43.0",
            "container_name": "prometheus",
            "restart": "always",
            "ports": [
                "9090:9090"
            ],
            "volumes": [
                "./prometheus.yml:/etc/prometheus/prometheus.yml"
            ]
        },
        "grafana": {
            "image": "grafana/grafana-oss:8.5.22-ubuntu",
            "container_name": "grafana",
            "restart": "always",
            "ports": [
                "3000:3000"
            ],
            "volumes":[
                "grafana-storage:/var/lib/grafana"
            ],
            "links": [
                "prometheus:prometheus"
            ]
        }
    },
    "volumes": {
        "grafana-storage": {
            "external": true
        }
    }
}